<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://www.mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="message">


	<insert id="insertmsg" parameterType="map" >
		insert into `message`( CONTENT, RECEIVER, SENDER) 
		VALUES (#{CONTENT},#{RECEIVER} ,#{SENDER});
	</insert>
	
	<select id="msgList" parameterType="string" resultType="map">
	select * from `message`
	</select> 
	
	<delete id="msgDelete" parameterType="map">
	delete from `message` where SENDER = #{SENDER}
	</delete>
	
	
